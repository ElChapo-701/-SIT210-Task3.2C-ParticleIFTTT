int led = CHG;  

void setup() {
  pinMode(led, OUTPUT);
}

void loop() {
  digitalWrite(led, HIGH);   

  String temp = String(random(30, 40));
  Particle.publish("Sunlight is there, temprature", temp, PRIVATE);
  delay(3000);           

  digitalWrite(led, LOW);    
  delay(3000); 
  
  digitalWrite(led, HIGH);   

   temp = (random(10, 20));
  Particle.publish("Sunlight is not there, temprature", temp, PRIVATE);
  delay(3000);           

  digitalWrite(led, LOW);    
  delay(3000);
}
